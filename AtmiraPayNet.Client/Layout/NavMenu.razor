@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-xl fixed-top bg-white navbar-light">
    <div class="container">
        <NavLink class="navbar-brand" href="">
            <img src="assets/atmiraPaynet.svg"
                 draggable="false"
                 height="30" />
        </NavLink>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto align-items-center">
                <AuthorizeView>
                    <Authorized>

                        @if (context.User.Identity != null)
                        {
                            var fullNameClaim = context.User.Claims.FirstOrDefault(c => c.Type == "fullName");
                            var fullNameValue = fullNameClaim?.Value ?? "";

                            if (!string.IsNullOrEmpty(fullNameValue))
                            {
                                <li class="nav-item ms-3">
                                    <span class="hello">Hola, @fullNameValue</span>
                                </li>
                                <hr class="vertical-separator">
                            }
                        }
                        <li class="nav-item ms-3">
                            <NavLink class="nav-link" href="logout">
                                <span id="logout" class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Cerrar sesión
                            </NavLink>
                        </li>

                    </Authorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

<style>
    .navbar-nav .nav-item .nav-link {
        color: black;
    }

        .navbar-nav .nav-item .nav-link.active {
            color: black;
        }

        .navbar-nav .nav-item .nav-link:hover {
            color: black;
        }

    .hello {
        color: black;
    }

    .vertical-separator {
        border: none;
        border-left: 1px solid #ccc;
        height: 40px;
    }
</style>